<% if flash[:notice] %>
<p class="notice"><%= notice %></p>
<% end %>
<% if flash[:alert] %>
<p class="alert"><%= alert %></p>
<% end %>
<div class="container">
<%= yield %>
</div>

<h4>Editing Book</h4>
<%= form_for(@book, url: book_path(@book)) do |f| %>
    <div>
        <%= f.label :Title %><br>
        <%= f.text_field :title, autofocus: true, :placeholder =>"#{@book.title}" %>
    </div>
    <div>
        <%= f.label :Opinion %><br>
        <%= f.text_area :body, :placeholder =>"#{@book.body}" %>
    </div>
    <div><%= f.submit "Update Book" %></div>
<% end %>
<%= link_to "Show", book_path , class: "btn btn-secondary"%>|<%= link_to "Back", books_path , class: "btn btn-secondary"%>